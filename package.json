    "private": false,
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "rollup": "4.45.3",
        "tsup": "^8.3.5",
        "typescript": "^4.4.4",
        "vite": "^7.0.6"
    },
    "dependencies": {
        "purgecss": "^7.0.2"
    },
    "peerDependencies": {
        "vite": ">=3 <=7"
    },
    "packageManager": "pnpm@10.12.4"
