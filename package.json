{
    "name": "@erbelion/vite-plugin-laravel-purgecss",
    "version": "0.4.0",
    "description": "A Vite plugin that integrates PurgeCSS with Laravel template assets.",
    "author": "erbelion",
    "keywords": [
        "vite",
        "vite-plugin",
        "purgecss",
        "laravel"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/erbelion/vite-plugin-laravel-purgecss.git"
    },
    "bugs": {
        "url": "https://github.com/erbelion/vite-plugin-laravel-purgecss/issues"
    },
    "homepage": "https://github.com/erbelion/vite-plugin-laravel-purgecss#readme",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "exports": {
